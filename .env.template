# Amazon PPC Optimizer - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# =============================================================================
# AMAZON ADVERTISING API CREDENTIALS
# =============================================================================
# Get these from Amazon Advertising API Console: https://advertising.amazon.com/API/
AMAZON_CLIENT_ID=amzn1.application-oa2-client.YOUR_CLIENT_ID_HERE
AMAZON_CLIENT_SECRET=amzn1.oa2-cs.v1.YOUR_CLIENT_SECRET_HERE
AMAZON_REFRESH_TOKEN=Atzr|IwEBIYOUR_REFRESH_TOKEN_HERE
AMAZON_PROFILE_ID=YOUR_PROFILE_ID_HERE

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
# Your Google Cloud Project ID
GCP_PROJECT=amazon-ppc-474902
GOOGLE_CLOUD_PROJECT=amazon-ppc-474902

# BigQuery configuration
BIGQUERY_PROJECT_ID=amazon-ppc-474902
BIGQUERY_DATASET_ID=amazon_ppc
BIGQUERY_LOCATION=us-east4

# =============================================================================
# DASHBOARD CONFIGURATION (Optional)
# =============================================================================
DASHBOARD_URL=https://amazonppcdashboard-db7ltsqjn-james-projects-5e9a58a0.vercel.app
DASHBOARD_API_KEY=your_dashboard_api_key_here
DASHBOARD_ENABLED=true
DASHBOARD_SEND_REAL_TIME_UPDATES=true

# =============================================================================
# OPTIMIZER CONFIGURATION
# =============================================================================
# Configuration file path (optional - overrides config.json)
PPC_CONFIG_PATH=./sample_config.yaml

# Or provide full config as JSON string (optional)
# PPC_CONFIG='{"amazon_api": {...}, "bid_optimization": {...}}'

# =============================================================================
# RUNTIME FLAGS
# =============================================================================
# Dry run mode (true = no changes made, false = make actual changes)
PPC_DRY_RUN=true

# Specific features to run (comma-separated)
# Available: bid_optimization, dayparting, campaign_management, keyword_discovery, negative_keywords, budget_optimization, placement_bids
# PPC_FEATURES=bid_optimization,dayparting

# Connection verification settings
PPC_VERIFY_CONNECTION=false
PPC_VERIFY_SAMPLE_SIZE=5

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
FROM_EMAIL=your_email@gmail.com
TO_EMAIL=alerts@example.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_OUTPUT_DIR=./logs

# =============================================================================
# DEVELOPMENT/TESTING FLAGS
# =============================================================================
# Set to 'true' to enable debug mode
DEBUG=false

# Set to 'true' to skip actual API calls (for testing)
MOCK_API_CALLS=false

# =============================================================================
# NOTES:
# =============================================================================
# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in your actual credentials in .env
# 3. Load environment variables: export $(cat .env | xargs)
# 4. Or use python-dotenv: pip install python-dotenv
# 5. NEVER commit .env file to git (it's in .gitignore)
# 6. For production, use Google Secret Manager instead of .env file
# 7. For GitHub Actions, configure secrets in repository settings
