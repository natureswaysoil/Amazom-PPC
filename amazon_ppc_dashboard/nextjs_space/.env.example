# Dashboard API Key (used by the optimizer to authenticate)
DASHBOARD_API_KEY=your_dashboard_api_key_here

# Database connection (if needed)
DATABASE_URL=your_database_url_here

# NextAuth configuration (if using authentication)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://amazonppcdashboard.vercel.app

# Amazon Advertising API credentials (if needed in dashboard)
AMAZON_CLIENT_ID=your_client_id_here
AMAZON_CLIENT_SECRET=your_client_secret_here
AMAZON_REFRESH_TOKEN=your_refresh_token_here
AMAZON_PROFILE_ID=your_profile_id_here

# BigQuery Configuration (for data queries)
GCP_PROJECT=amazon-ppc-474902
GOOGLE_CLOUD_PROJECT=amazon-ppc-474902
BQ_DATASET_ID=amazon_ppc
BQ_LOCATION=us-east4

# Google Cloud Service Account Credentials
# For Vercel: Paste the entire JSON content from your service account key file
# For local development: You can use GOOGLE_APPLICATION_CREDENTIALS with a file path instead
GCP_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
# OR use a file path (local development only):
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
